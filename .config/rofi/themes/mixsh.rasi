/**
 * Ayu Mirage theme ported for rofi
 */

* {
  accentcolor: #A3BE8C;
  backgroundcolor: #2E3440f3;
  separatorcolor: transparent;
  foregroundcolor: #ECEFF4;
  selectioncolor: #A3BE8C;
  
  background-color: transparent;
  text-color: @foregroundcolor;
}

#window {
  font: "Source Sans Pro 12";
  location: 0;
  background-color: @backgroundcolor;
  border-color: @accentcolor;
  border: 1;
  border-radius: 0;
  padding: 16 14;
  width: 640;
}

#element {
  spacing: 2;
  padding: 8;
}

#element.selected.normal {
  text-color: @selectioncolor;
}

#element.selected.active {
  text-color: @selectioncolor;
}

#inputbar {
  border: none;
  children: [prompt, entry];
}

#prompt {
  color: @accentcolor;
  padding: 2 8 8;
}

#entry {
  padding: 2 8 8;
}
